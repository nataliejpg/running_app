<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Date</th>
      <th>Distance</th>
      <th>Duration</th>
      <th>Pace</th>
      <th>Place</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @runs.each_with_index do |run, index| %>
      <tr>
        <td><%= index +1 %></td>
        <td><%= run.date %></td>
        <td><%= run.distance %></td>
        <td><%= run.duration_time %></td>
        <td><%= run.pace %></td>
        <td><%= run.place_name %></td>
        <td><%= link_to 'Show', run %></td>
        <td><%= link_to 'Edit', edit_run_path(run) %></td>
        <td><%= link_to 'Destroy', run, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>